<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="progressbar">
		<item name="android:indeterminateOnly">true</item>
		<item name="android:indeterminateBehavior">repeat</item>
		<item name="android:indeterminateDuration">3500</item>
		<item name="android:minWidth">48dip</item>
		<item name="android:maxWidth">48dip</item>
		<item name="android:minHeight">48dip</item>
		<item name="android:maxHeight">48dip</item>
	</style>

	<style name="progressbar.horizontal">
		<item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@drawable/rr_progress_horizontal
		</item>
		<item name="android:minHeight">20dip</item>
		<item name="android:maxHeight">20dip</item>
	</style>

	<style name="Widget.Button.BigButton" parent="android:Widget.Button">
		<item name="android:background">@drawable/big_button_bg_state
		</item>
	</style>
	<style name="Widget.TextView.GuideTitle" parent="android:Widget.TextView">
		<item name="android:textColor">#ffffffff</item>
		<item name="android:shadowColor">#ff000000</item>
		<item name="android:shadowRadius">2.0</item>
		<item name="android:textSize">22.0sp</item>
	</style>
	<style name="Widget.TextView.BudgetItemName" parent="android:Widget.TextView">
		<item name="android:textColor">#ffffffff</item>
		<item name="android:shadowColor">#ff000000</item>
		<item name="android:shadowRadius">2.0</item>
		<item name="android:textSize">20.0sp</item>
		<item name="android:paddingLeft">5sp</item>
		<item name="android:paddingRight">5sp</item>
	</style>
	<style name="Widget.TextView.CalendarTitle" parent="android:Widget.TextView">
		<item name="android:textColor">#ffffffff</item>
		<item name="android:shadowColor">#ff000000</item>
		<item name="android:shadowRadius">2.0</item>
		<item name="android:textSize">26.0sp</item>
	</style>
	<style name="Widget.TextView.ContentText" parent="android:Widget.TextView">
		<item name="android:textSize">20.0sp</item>
	</style>

	<style name="Widget.TabWidget.Budgeting" parent="android:Widget.TabWidget">
		<item name="android:textAppearance">@style/TextAppearance.Widget.TabWidget.Budgeting
		</item>
		
	</style>
	<style name="TextAppearance.Widget.TabWidget.Budgeting" parent="android:TextAppearance.Widget.TabWidget">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:shadowColor">#88000000</item>
		<item name="android:shadowRadius">2.0</item>
		<item name="android:textColor">@color/budget_tab_indicator_text
		</item>
	</style>
</resources>
